<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bkgrnd">

    <Button
        android:id="@+id/CallToDoctor"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:background="@drawable/und_corner"
        android:text="কল " />

    <Button
        android:id="@+id/EmailToAuthroity"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/CallToDoctor"
        android:layout_below="@+id/CallToDoctor"
        android:layout_marginTop="156dp"
        android:background="@drawable/und_corner"
        android:text="Button" />

    <Button
        android:id="@+id/ContactWithHelathMinistry"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/CallToDoctor"
        android:layout_below="@+id/CallToDoctor"
        android:layout_marginTop="52dp"
        android:background="@drawable/und_corner"
        android:text="ইমেইল টু " />

</RelativeLayout>
